{
  "name": "bim-audit-web",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev -w api\" \"npm run dev -w web\"",
    "dev:api": "npm run dev -w api",
    "dev:web": "npm run dev -w web",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "format": "prettier -w .",
    "db:generate": "npm run generate -w @bim-audit/db",
    "db:migrate": "npm run migrate:deploy -w @bim-audit/db",
    "db:seed": "npm run seed -w @bim-audit/db",
    "postinstall": "npm run db:generate",
    "docker:build": "docker compose -f infra/docker-compose.yml build",
    "docker:up": "docker compose -f infra/docker-compose.yml up -d",
    "docker:down": "docker compose -f infra/docker-compose.yml down",
    "docker:migrate": "docker compose -f infra/docker-compose.yml --profile tools run --rm migrate",
    "import": "node --experimental-strip-types scripts/import-spreadsheet.ts",
    "setup-storage": "npx tsx scripts/setup-storage-bucket.ts"
  },
  "devDependencies": {
    "@prisma/client": "^7.3.0",
    "@prisma/debug": "^6.19.2",
    "concurrently": "^9.1.2",
    "pg": "^8.18.0",
    "prettier": "^3.6.2",
    "prisma": "^7.3.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
